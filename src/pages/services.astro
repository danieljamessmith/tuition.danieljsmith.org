---
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="Tutoring Services"
    subtitle="Comprehensive academic support tailored to your needs. We offer personalized tutoring across a wide range of subjects."
    actions={[{ variant: 'primary', text: 'Get Started', href: '/contact' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1503676260728-1c00da094a0b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Tutoring Services Image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Tutoring Services"
    subtitle="We provide expert tutoring across multiple subjects and academic levels."
    columns={3}
    items={[
      {
        title: 'Mathematics',
        description:
          'Expert help with algebra, geometry, calculus, and statistics. From basic concepts to advanced problem-solving techniques.',
        icon: 'tabler:math',
      },
      {
        title: 'Science',
        description:
          'Comprehensive support in physics, chemistry, and biology. Hands-on learning approaches to complex scientific concepts.',
        icon: 'tabler:flask',
      },
      {
        title: 'English & Literature',
        description:
          'Improve reading comprehension, writing skills, and literary analysis. Support for essays, creative writing, and exam preparation.',
        icon: 'tabler:book',
      },
      {
        title: 'Test Preparation',
        description:
          'Specialized coaching for standardized tests, entrance exams, and assessment preparation with proven strategies.',
        icon: 'tabler:clipboard-check',
      },
      {
        title: 'Homework Help',
        description:
          'Regular support with assignments and coursework to ensure understanding and timely completion of school work.',
        icon: 'tabler:school',
      },
      {
        title: 'Exam Review',
        description:
          'Focused review sessions to prepare for upcoming exams, including past paper practice and study techniques.',
        icon: 'tabler:file-text',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: '/contact',
      },
    ]}
    title="Ready to Get Started?"
    subtitle="Contact us today to discuss how we can help you achieve your academic goals."
  />
</Layout>
