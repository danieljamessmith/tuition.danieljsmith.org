---
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    title="Tutoring Services"
    subtitle="Private tuition from GCSE to Graduate level, covering all major exam boards and entrance examinations."
  />

  <!-- Features2 Widget ************** -->

  <section class="bg-section-gradient">
    <Features2
      columns={3}
      classes={{ container: 'pt-2 md:pt-4 pb-8 md:pb-12' }}
      items={[
        {
          title: 'University Entrance Exams',
          description:
            'Specialist preparation for TMUA, MAT, ESAT, STEP and others. Mock interviews and Oxbridge admissions.',
          icon: 'tabler:school',
        },
        {
          title: 'A‑Level Maths & Physics',
          description:
            'Comprehensive support for A‑Level Maths, Further Maths, and Physics across all major exam boards, including Edexcel, AQA, OCR and CIE.',
          icon: 'tabler:calculator',
        },
        {
          title: 'Undergraduate & Graduate Level',
          description:
            'Undergraduate and Graduate mathematics and mathematical methods modules. Experienced tutoring STEM students at Imperial, Nottingham, Edinburgh, Eindhoven and more.',
          icon: 'tabler:books',
        },
        {
          title: 'Scientific Computing',
          description:
            'Python, Jupyter, data science, and computational methods. Support for programming assignments, data analysis projects, and numerical methods.',
          icon: 'tabler:code',
        },
        {
          title: 'Mock Exams & Professional Marking',
          description:
            'Realistic mocks written and marked to exam‑board standards, with detailed feedback, mark schemes, and improvement plans.',
          icon: 'tabler:clipboard-check',
        },
        {
          title: 'GCSE Maths & Physics',
          description: 'Tailored sessions for all major GCSE and iGCSE exam boards.',
          icon: 'tabler:math',
        },
        {
          title: 'Alternative Qualifications',
          description: 'Expert tuition for IB, HND, BTEC and Foundation Year Programmes.',
          icon: 'tabler:certificate',
        },
        {
          title: 'Special Educational Needs',
          description:
            'Experienced working with students with dyslexia, ASD and ADHD, adapting teaching to individual needs.',
          icon: 'tabler:heart-handshake',
        },
        {
          title: 'Enhanced DBS Certified',
          description: 'Enhanced DBS certification ensures a professional, secure learning environment for all students.',
          icon: 'tabler:shield-check',
        },
      ]}
    />
  </section>
</Layout>
