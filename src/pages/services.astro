---
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    title="Tutoring Services"
    subtitle="Expert tuition from A‑Level through to university level, covering all major exam boards and entrance examinations."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    columns={3}
    classes={{ container: 'pt-2 md:pt-4' }}
    items={[
      {
        title: 'University Entrance Exams',
        description:
          'Specialist preparation for MAT, PAT, STEP, and TMUA with Oxbridge‑focused strategies and extensive past‑paper practice.',
        icon: 'tabler:school',
      },
      {
        title: 'A‑Level Maths & Physics',
        description:
          'Comprehensive support for A‑Level Maths, Further Maths, and Physics across Edexcel, AQA, OCR A and OCR B (MEI).',
        icon: 'tabler:calculator',
      },
      {
        title: 'Undergraduate & Graduate Level',
        description:
          'Support for university modules in multivariable calculus, differential equations, linear algebra, and mathematical methods.',
        icon: 'tabler:books',
      },
      {
        title: 'Scientific Computing',
        description:
          'Python, Jupyter, data science, and computational methods. Support for programming assignments, data analysis projects, and numerical methods.',
        icon: 'tabler:code',
      },
      {
        title: 'Mock Exams & Professional Marking',
        description:
          'Realistic mocks written and marked to exam‑board standards, with detailed feedback, mark schemes, and improvement plans.',
        icon: 'tabler:clipboard-check',
      },
      {
        title: 'GCSE Maths & Physics',
        description:
          'Tailored sessions for all major GCSE exam boards (Edexcel, AQA, OCR, WJEC).',
        icon: 'tabler:math',
      },
      {
        title: 'Alternative Qualifications',
        description:
          'Expert tuition for IB, HND, BTEC (Levels 3–5), and Foundation Year Programmes.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Special Educational Needs',
        description:
          'Experienced working with students with ASD and ADHD, adapting teaching to individual needs.',
        icon: 'tabler:heart-handshake',
      },
      {
        title: 'Enhanced DBS Certified',
        description:
          'Enhanced DBS certification ensures a professional, secure learning environment for all students.',
        icon: 'tabler:shield-check',
      },
    ]}
  />
</Layout>
