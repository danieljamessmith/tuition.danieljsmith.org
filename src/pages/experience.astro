---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Experience â€“ Daniel J. Smith">

  <main class="max-w-4xl mx-auto px-4 py-12">

    <section class="mb-12">
      <h2 class="text-3xl font-bold text-gray-800 mb-3">Experience</h2>
      <p class="text-gray-600 text-lg">Explore coverage across exam boards, admissions tests, and university modules.</p>
    </section>

    <section class="mb-12">
      <div class="bg-white p-4 rounded-md shadow-sm">
        <div class="flex flex-wrap gap-2" role="tablist" aria-label="Experience tabs">
          <button id="tab-btn-alevel" data-tab="alevel" class="px-4 py-2 rounded-md bg-teal-700 text-white" aria-controls="tab-panel-alevel" aria-selected="true" role="tab">A-level</button>
          <button id="tab-btn-gcse" data-tab="gcse" class="px-4 py-2 rounded-md bg-white text-teal-700 border border-teal-200" aria-controls="tab-panel-gcse" aria-selected="false" role="tab">GCSE</button>
          <button id="tab-btn-admissions" data-tab="admissions" class="px-4 py-2 rounded-md bg-white text-teal-700 border border-teal-200" aria-controls="tab-panel-admissions" aria-selected="false" role="tab">Admissions</button>
          <button id="tab-btn-university" data-tab="university" class="px-4 py-2 rounded-md bg-white text-teal-700 border border-teal-200" aria-controls="tab-panel-university" aria-selected="false" role="tab">University</button>
        </div>

        <div id="tab-panel-alevel" role="tabpanel" aria-labelledby="tab-btn-alevel" class="mt-4">
          <table class="min-w-full text-left text-sm text-gray-700">
            <thead class="text-gray-600">
              <tr>
                <th class="py-2 pr-4">Board</th>
                <th class="py-2 pr-4">Subject</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-t"><td class="py-2 pr-4">Edexcel</td><td class="py-2 pr-4">Mathematics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">Edexcel</td><td class="py-2 pr-4">Further Mathematics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">Edexcel</td><td class="py-2 pr-4">Physics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">AQA</td><td class="py-2 pr-4">Mathematics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">AQA</td><td class="py-2 pr-4">Further Mathematics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">AQA</td><td class="py-2 pr-4">Physics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">OCR A</td><td class="py-2 pr-4">Mathematics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">OCR A</td><td class="py-2 pr-4">Further Mathematics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">OCR A</td><td class="py-2 pr-4">Physics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">OCR B (MEI)</td><td class="py-2 pr-4">Mathematics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">OCR B (MEI)</td><td class="py-2 pr-4">Further Mathematics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">OCR B (MEI)</td><td class="py-2 pr-4">Physics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">CIE</td><td class="py-2 pr-4">Mathematics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">CIE</td><td class="py-2 pr-4">Further Mathematics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">CIE</td><td class="py-2 pr-4">Physics</td></tr>
            </tbody>
          </table>
        </div>

        <div id="tab-panel-gcse" role="tabpanel" aria-labelledby="tab-btn-gcse" class="mt-4 hidden">
          <table class="min-w-full text-left text-sm text-gray-700">
            <thead class="text-gray-600">
              <tr>
                <th class="py-2 pr-4">Board</th>
                <th class="py-2 pr-4">Subject</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-t"><td class="py-2 pr-4">Edexcel</td><td class="py-2 pr-4">Mathematics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">Edexcel</td><td class="py-2 pr-4">Physics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">Edexcel (iGCSE)</td><td class="py-2 pr-4">Mathematics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">AQA</td><td class="py-2 pr-4">Mathematics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">AQA</td><td class="py-2 pr-4">Physics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">AQA</td><td class="py-2 pr-4">Statistics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">OCR</td><td class="py-2 pr-4">Mathematics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">OCR</td><td class="py-2 pr-4">Physics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">WJEC</td><td class="py-2 pr-4">Mathematics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">WJEC</td><td class="py-2 pr-4">Physics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">CIE</td><td class="py-2 pr-4">Mathematics</td></tr>
              <tr class="border-t"><td class="py-2 pr-4">CIE</td><td class="py-2 pr-4">Physics</td></tr>
            </tbody>
          </table>
        </div>

        <div id="tab-panel-admissions" role="tabpanel" aria-labelledby="tab-btn-admissions" class="mt-4 hidden">
          <table class="min-w-full text-left text-sm text-gray-700">
            <thead class="text-gray-600">
              <tr>
                <th class="py-2 pr-4">Test</th>
                <th class="py-2 pr-4">Used by</th>
                <th class="py-2 pr-4">Overview</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-t">
                <td class="py-2 pr-4 font-semibold">TMUA</td>
                <td class="py-2 pr-4">Various UK universities</td>
                <td class="py-2 pr-4">Mathematical thinking/reasoning for maths-related degrees.</td>
              </tr>
              <tr class="border-t">
                <td class="py-2 pr-4 font-semibold">MAT</td>
                <td class="py-2 pr-4">Oxford (+ partners)</td>
                <td class="py-2 pr-4">Problem-solving admissions test for Maths/CS.</td>
              </tr>
              <tr class="border-t">
                <td class="py-2 pr-4 font-semibold">ESAT</td>
                <td class="py-2 pr-4">Cambridge, Imperial</td>
                <td class="py-2 pr-4">Admissions test for Engineering and Science.</td>
              </tr>
              <tr class="border-t">
                <td class="py-2 pr-4 font-semibold">STEP</td>
                <td class="py-2 pr-4">Cambridge (+ others)</td>
                <td class="py-2 pr-4">Advanced problem papers for Mathematics offers.</td>
              </tr>
            </tbody>
          </table>
        </div>

        <div id="tab-panel-university" role="tabpanel" aria-labelledby="tab-btn-university" class="mt-4 hidden">
          <table class="min-w-full text-left text-sm text-gray-700">
            <thead class="text-gray-600">
              <tr>
                <th class="py-2 pr-4">Code</th>
                <th class="py-2 pr-4">Title</th>
                <th class="py-2 pr-4">University</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-t">
                <td class="py-2 pr-4">COMP1043</td>
                <td class="py-2 pr-4">Mathematics for Computer Scientists 2</td>
                <td class="py-2 pr-4">University of Nottingham</td>
              </tr>
              <tr class="border-t">
                <td class="py-2 pr-4">F3202</td>
                <td class="py-2 pr-4">Mathematical Methods for Physics 2</td>
                <td class="py-2 pr-4">University of Sussex</td>
              </tr>
              <tr class="border-t">
                <td class="py-2 pr-4">CMP4004Y</td>
                <td class="py-2 pr-4">Mathematics for Computing</td>
                <td class="py-2 pr-4">University of East Anglia</td>
              </tr>
              <tr class="border-t">
                <td class="py-2 pr-4">EART70161</td>
                <td class="py-2 pr-4">Computational Mathematics</td>
                <td class="py-2 pr-4">Imperial College London</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <script>
        const tabs = [
          { btn: document.getElementById('tab-btn-alevel'), panel: document.getElementById('tab-panel-alevel') },
          { btn: document.getElementById('tab-btn-gcse'), panel: document.getElementById('tab-panel-gcse') },
          { btn: document.getElementById('tab-btn-admissions'), panel: document.getElementById('tab-panel-admissions') },
          { btn: document.getElementById('tab-btn-university'), panel: document.getElementById('tab-panel-university') },
        ];

        function activate(tabId) {
          const activeClasses = 'bg-teal-700 text-white';
          const idleClasses = 'bg-white text-teal-700 border border-teal-200';

          tabs.forEach(({ btn, panel }) => {
            const isActive = btn?.dataset.tab === tabId;
            panel?.classList.toggle('hidden', !isActive);
            if (btn) {
              btn.className = `px-4 py-2 rounded-md ${isActive ? activeClasses : idleClasses}`;
              btn.setAttribute('aria-selected', isActive ? 'true' : 'false');
            }
          });
        }

        tabs.forEach(({ btn }) => btn?.addEventListener('click', () => activate(btn.dataset.tab)));
      </script>
    </section>
    
  </main>
</MainLayout>


