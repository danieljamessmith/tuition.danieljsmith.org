---
import '@fontsource-variable/inter';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Primary brand colors - emerald/teal */
    --aw-color-primary: rgb(16 185 129);
    --aw-color-secondary: rgb(20 184 166);
    --aw-color-accent: rgb(5 150 105);

    /* Extended emerald palette for depth */
    --aw-color-emerald-50: rgb(236 253 245);
    --aw-color-emerald-100: rgb(209 250 229);
    --aw-color-emerald-200: rgb(167 243 208);
    --aw-color-emerald-500: rgb(16 185 129);
    --aw-color-emerald-600: rgb(5 150 105);
    --aw-color-emerald-700: rgb(4 120 87);

    /* Teal accents */
    --aw-color-teal-400: rgb(45 212 191);
    --aw-color-teal-500: rgb(20 184 166);
    --aw-color-teal-600: rgb(13 148 136);

    /* Warm accent for achievements/highlights */
    --aw-color-accent-warm: rgb(245 158 11);
    --aw-color-accent-warm-light: rgb(252 211 77);

    /* Text colors */
    --aw-color-text-heading: rgb(17 24 39);
    --aw-color-text-default: rgb(31 41 55);
    --aw-color-text-muted: rgb(107 114 128);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: rgb(209 250 229);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(52 211 153);
    --aw-color-secondary: rgb(45 212 191);
    --aw-color-accent: rgb(16 185 129);

    --aw-color-text-heading: rgb(247 248 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(156 163 175);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: rgb(4 120 87);
      color: snow;
    }
  }

  .aw-link-active {
    @apply font-bold text-emerald-50;
    border-bottom: 2px solid rgb(209 250 229);
  }
</style>
