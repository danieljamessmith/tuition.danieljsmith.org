---
import type { Form as Props } from '~/types';
import Button from '~/components/ui/Button.astro';

const { inputs, selects, textarea, disclaimer, button = 'Contact us', description = '' } = Astro.props;
---

<form action="https://api.web3forms.com/submit" method="POST" id="contact-form">
  <!-- Web3Forms Access Key -->
  <input type="hidden" name="access_key" value="78977e42-5cdb-4969-bf0e-9d3a9762ff81" />

  <!-- Redirect to Thank You page after submission -->
  <input type="hidden" name="redirect" value="https://tuition.danieljsmith.org/thank-you" />

  <!-- Custom Subject Line -->
  <input type="hidden" name="subject" value="New Contact Form Submission from danieljsmith.org" />

  <!-- From Name -->
  <input type="hidden" name="from_name" value="Daniel J Smith Tuition Website" />

  {
    inputs &&
      inputs.map(
        ({ type = 'text', name, label = '', autocomplete = 'on', placeholder = '' }) =>
          name && (
            <div class="mb-5">
              {label && (
                <label for={name} class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1.5">
                  {label}
                </label>
              )}
              <input
                type={type}
                name={name}
                id={name}
                autocomplete={autocomplete}
                placeholder={placeholder}
                required
                class="py-3 px-4 block w-full text-base rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-slate-800/50 text-gray-900 dark:text-gray-100 transition-all duration-200 focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 dark:focus:border-emerald-400 focus:bg-white dark:focus:bg-slate-800 outline-none placeholder:text-gray-400"
              />
            </div>
          )
      )
  }

  {
    selects &&
      selects.map(({ name, label, options }) => (
        <div class="mb-5">
          {label && (
            <label for={name} class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1.5">
              {label}
            </label>
          )}
          <select
            name={name}
            id={name}
            required
            class="py-3 px-4 block w-full text-base rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-slate-800/50 text-gray-900 dark:text-gray-100 transition-all duration-200 focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 dark:focus:border-emerald-400 focus:bg-white dark:focus:bg-slate-800 outline-none cursor-pointer"
          >
            {options.map((option) => (
              <option value={option.value} disabled={option.value === ''}>
                {option.label}
              </option>
            ))}
          </select>
        </div>
      ))
  }

  {
    textarea && (
      <div class="mb-5">
        <label for="textarea" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1.5">
          {textarea.label}
        </label>
        <textarea
          id="textarea"
          name={textarea.name ? textarea.name : 'message'}
          rows={textarea.rows ? textarea.rows : 4}
          placeholder={textarea.placeholder}
          required
          class="py-3 px-4 block w-full text-base rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-slate-800/50 text-gray-900 dark:text-gray-100 transition-all duration-200 focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 dark:focus:border-emerald-400 focus:bg-white dark:focus:bg-slate-800 outline-none resize-y placeholder:text-gray-400"
        />
      </div>
    )
  }

  {
    disclaimer && (
      <div class="mt-4 flex items-start">
        <div class="flex mt-0.5">
          <input
            id="disclaimer"
            name="disclaimer"
            type="checkbox"
            required
            class="cursor-pointer w-5 h-5 rounded border-gray-300 dark:border-gray-600 text-emerald-600 focus:ring-emerald-500 focus:ring-offset-0 dark:bg-slate-800 transition-colors"
          />
        </div>
        <div class="ml-3">
          <label for="disclaimer" class="cursor-pointer select-none text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
            {disclaimer.label}
          </label>
        </div>
      </div>
    )
  }

  <!-- hCaptcha Widget -->
  <div class="mt-6">
    <div class="h-captcha" data-sitekey="50b2fe65-b00b-4b9e-ad62-3ba471098be2"></div>
  </div>

  {
    button && (
      <div class="mt-10 grid">
        <Button variant="primary" type="submit">
          {button}
        </Button>
      </div>
    )
  }

  {
    description && (
      <div class="mt-3 text-center">
        <p class="text-sm text-gray-600 dark:text-gray-400">{description}</p>
      </div>
    )
  }
</form>

<!-- hCaptcha Script (official) -->
<script is:inline src="https://js.hcaptcha.com/1/api.js" async defer></script>

<!-- Re-initialize hCaptcha on View Transitions navigation -->
<script is:inline>
  function renderCaptcha() {
    const captchaContainer = document.querySelector('.h-captcha');
    
    if (!captchaContainer) return;
    
    // Check if hcaptcha is loaded
    if (typeof hcaptcha !== 'undefined') {
      // Only render if not already rendered (check for iframe)
      if (!captchaContainer.querySelector('iframe')) {
        try {
          hcaptcha.render(captchaContainer, {
            sitekey: '50b2fe65-b00b-4b9e-ad62-3ba471098be2'
          });
        } catch {
          // Already rendered or error, ignore
        }
      }
    } else {
      // hCaptcha not loaded yet, retry in 100ms
      setTimeout(renderCaptcha, 100);
    }
  }

  function initContactForm() {
    const form = document.getElementById('contact-form');
    
    // Render captcha (with retry logic for async script loading)
    renderCaptcha();

    // Add form validation (only once)
    if (form && !form.dataset.validated) {
      form.dataset.validated = 'true';
      form.addEventListener('submit', function (e) {
        const hCaptchaResponse = form.querySelector('textarea[name=h-captcha-response]');
        if (!hCaptchaResponse || !hCaptchaResponse.value) {
          e.preventDefault();
          alert('Please complete the captcha verification to submit the form.');
          return false;
        }
      });
    }
  }

  // Run on initial page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initContactForm);
  } else {
    initContactForm();
  }

  // Run on View Transitions navigation (Astro)
  document.addEventListener('astro:page-load', initContactForm);
</script>
