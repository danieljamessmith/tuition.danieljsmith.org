---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';
import type { Testimonials as Props } from '~/types';

const {
  title = '',
  subtitle = '',
  tagline = '',
  testimonials = [],
  callToAction,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

// Convert newlines to HTML breaks to preserve spacing in production builds
// This is necessary because HTML minification collapses whitespace
const formatTestimonial = (text: string): string => {
  return text
    .split('\n\n')
    .join('<br><br>')
    .split('\n')
    .join('<br>');
};
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  <div class="columns-1 lg:columns-2 gap-8">
    {
      testimonials &&
        testimonials.map(({ title, testimonial, name, job, board, image }) => (
          <div class="break-inside-avoid mb-8 intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter">
            <div class="flex flex-col p-6 md:p-8 rounded-lg shadow-xl dark:shadow-none dark:border dark:border-slate-600">
              {testimonial && (
                <blockquote class="flex-auto mb-6">
                  <p class="text-muted text-base leading-relaxed italic" set:html={formatTestimonial(testimonial)}></p>
                </blockquote>
              )}

              <hr class="border-slate-200 dark:border-slate-600 mb-4" />

              {title && <h3 class="text-lg font-semibold leading-6 mb-2">{title}</h3>}
              {board && <p class="text-sm text-muted mb-4">{board}</p>}

              <div class="flex items-center mt-auto">
                {image && (
                  <div class="h-10 w-10 rounded-full border border-slate-200 dark:border-slate-600">
                    {typeof image === 'string' ? (
                      <Fragment set:html={image} />
                    ) : (
                      <Image
                        class="h-10 w-10 rounded-full border border-slate-200 dark:border-slate-600 min-w-full min-h-full"
                        width={40}
                        height={40}
                        widths={[400, 768]}
                        layout="fixed"
                        {...image}
                      />
                    )}
                  </div>
                )}

                <div class="grow ml-3 rtl:ml-0 rtl:mr-3">
                  {name && <p class="text-base font-semibold">{name}</p>}
                  {job && <p class="text-sm text-muted">{job}</p>}
                </div>
              </div>
            </div>
          </div>
        ))
    }
  </div>
  {
    callToAction && (
      <div class="flex justify-center mx-auto w-fit mt-8 md:mt-12 font-medium">
        <Button {...callToAction} />
      </div>
    )
  }
</WidgetWrapper>
