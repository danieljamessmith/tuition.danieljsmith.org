---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';
import type { Testimonials as Props } from '~/types';

const {
  title = '',
  subtitle = '',
  tagline = '',
  testimonials = [],
  callToAction,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

// Convert newlines to HTML breaks to preserve spacing in production builds
// This is necessary because HTML minification collapses whitespace
const formatTestimonial = (text: string): string => {
  return text
    .split('\n\n')
    .join('<br><br>')
    .split('\n')
    .join('<br>');
};
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  <div class="columns-1 lg:columns-2 gap-6 lg:gap-8">
    {
      testimonials &&
        testimonials.map(({ title, testimonial, name, job, board, image }) => {
          return (
            <div class="break-inside-avoid mb-6 lg:mb-8">
              <div class="group relative flex flex-col bg-white dark:bg-slate-900 rounded-xl overflow-hidden shadow-card hover:shadow-card-hover transition-all duration-300 hover:-translate-y-1">
                <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-emerald-500 via-teal-500 to-emerald-400 opacity-80 group-hover:opacity-100 transition-opacity"></div>
                
                <div class="p-6 md:p-8">
                  <div class="absolute top-4 right-6 text-7xl font-serif text-emerald-100 dark:text-emerald-900/50 leading-none select-none pointer-events-none">"</div>

                  {testimonial && (
                    <blockquote class="relative z-10 mb-6">
                      <p class="text-gray-600 dark:text-gray-300 text-base leading-relaxed" set:html={formatTestimonial(testimonial)}></p>
                    </blockquote>
                  )}

                  <div class="h-px bg-gradient-to-r from-transparent via-gray-200 dark:via-gray-700 to-transparent mb-5"></div>

                  <div class="mb-4">
                    {title && (
                      <h3 class="text-lg font-semibold text-gray-900 dark:text-white leading-snug mb-1">{title}</h3>
                    )}
                    {board && (
                      <p class="text-sm text-emerald-600 dark:text-emerald-400 font-medium">{board}</p>
                    )}
                  </div>

                  <div class="flex items-center mt-auto pt-2 border-t border-gray-100 dark:border-gray-800">
                    {image && (
                      <div class="h-10 w-10 rounded-full border-2 border-emerald-100 dark:border-emerald-800 overflow-hidden flex-shrink-0">
                        {typeof image === 'string' ? (
                          <Fragment set:html={image} />
                        ) : (
                          <Image
                            class="h-10 w-10 rounded-full min-w-full min-h-full object-cover"
                            width={40}
                            height={40}
                            widths={[400, 768]}
                            layout="fixed"
                            {...image}
                          />
                        )}
                      </div>
                    )}

                    <div class={`grow ${image ? 'ml-3 rtl:ml-0 rtl:mr-3' : ''}`}>
                      {name && <p class="text-base font-semibold text-gray-900 dark:text-white">{name}</p>}
                      {job && <p class="text-sm text-gray-500 dark:text-gray-400">{job}</p>}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          );
        })
    }
  </div>
  {
    callToAction && (
      <div class="flex justify-center mx-auto w-fit mt-8 md:mt-12 font-medium">
        <Button {...callToAction} />
      </div>
    )
  }
</WidgetWrapper>
