---
import { Icon } from 'astro-icon/components';
import { getPermalink } from '~/utils/permalinks';
import { SITE } from 'astrowind:config';

interface Props {
  socialLinks?: Array<{
    ariaLabel: string;
    icon: string;
    href: string;
  }>;
}

import GitHubLogo from '~/assets/icons/github-logo.svg?raw';
import LinkedInLogo from '~/assets/icons/linkedin-logo.svg?raw';

const { socialLinks = [] } = Astro.props;

const getSocialLogo = (icon: string) => {
  switch (icon) {
    case 'github':
      return GitHubLogo;
    case 'linkedin':
      return LinkedInLogo;
    default:
      return null;
  }
};

const links = [
  { text: 'Home', href: getPermalink('/') },
  { text: 'Services', href: getPermalink('/services') },
  { text: 'Pricing', href: getPermalink('/pricing') },
  { text: 'Testimonials', href: getPermalink('/testimonials') },
  { text: 'Contact', href: getPermalink('/contact') },
];

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-gray-100 dark:border-slate-800 bg-gray-50 dark:bg-slate-900/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-8 md:py-12">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
      <!-- Logo and copyright -->
      <div class="text-center md:text-left">
        <a href={getPermalink('/')} class="text-xl font-bold text-gray-900 dark:text-white hover:text-emerald-600 dark:hover:text-emerald-400 transition-colors">
          {SITE?.name}
        </a>
        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
          &copy; {currentYear} DJS Tuition. All rights reserved.
        </p>
      </div>

      <!-- Quick links -->
      <nav class="flex flex-wrap justify-center gap-x-6 gap-y-2">
        {links.map(({ text, href }) => (
          <a
            href={href}
            class="text-sm text-gray-600 dark:text-gray-400 hover:text-emerald-600 dark:hover:text-emerald-400 transition-colors"
          >
            {text}
          </a>
        ))}
      </nav>

      <!-- Social links -->
      {socialLinks?.length > 0 && (
        <div class="flex justify-center gap-3">
          {socialLinks.map(({ ariaLabel, href, icon }) => {
            const logoSvg = getSocialLogo(icon);
            return logoSvg ? (
              <a
                class="flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 dark:bg-slate-800 text-gray-600 dark:text-gray-400 hover:bg-emerald-100 dark:hover:bg-emerald-900/50 hover:text-emerald-600 dark:hover:text-emerald-400 transition-colors"
                aria-label={ariaLabel}
                href={href}
                target="_blank"
                rel="noopener noreferrer"
              >
                <span class="w-5 h-5" set:html={logoSvg} />
              </a>
            ) : null;
          })}
        </div>
      )}
    </div>
  </div>
</footer>
